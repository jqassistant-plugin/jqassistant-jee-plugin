<jqassistant-rules xmlns="http://schema.jqassistant.org/rule/v1.10"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://schema.jqassistant.org/rule/v1.10 http://schema.jqassistant.org/rule/jqassistant-rule-v1.10.xsd">

    <concept id="jee-resource:ResourceField">
        <description>Abstract concept that returns all fields labeled with "JEE" and "Resource".</description>
        <cypher><![CDATA[
            MATCH
              (:Type)-[:DECLARES]->(field:JEE:Resource)
            RETURN
               field AS PersistenceContext
        ]]></cypher>
    </concept>

</jqassistant-rules>
