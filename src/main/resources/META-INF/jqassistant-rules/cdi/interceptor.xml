<jqassistant-rules xmlns="http://schema.jqassistant.org/rule/v1.10"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://schema.jqassistant.org/rule/v1.10 http://schema.jqassistant.org/rule/jqassistant-rule-v1.10.xsd">

    <concept id="interceptor:Interceptor">
        <description>Abstract concept that returns all classes labeled with "Interceptor", "JEE" and "Injectable".
        </description>
        <cypher><![CDATA[
            MATCH
              (interceptor:Type:Class:Interceptor:JEE:Injectable)
            RETURN
              interceptor AS Interceptor
        ]]></cypher>
    </concept>

    <concept id="interceptor:InterceptorBinding">
        <description>Abstract concept that returns all annotations labeled with "JEE" and "InterceptorBinding".
        </description>
        <cypher><![CDATA[
            MATCH
              (binding:Type:Annotation:JEE:InterceptorBinding)
            RETURN
              binding AS InterceptorBinding
        ]]></cypher>
    </concept>

</jqassistant-rules>
