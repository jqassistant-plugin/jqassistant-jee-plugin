<jqassistant-rules xmlns="http://schema.jqassistant.org/rule/v1.10"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://schema.jqassistant.org/rule/v1.10 http://schema.jqassistant.org/rule/jqassistant-rule-v1.10.xsd">

    <concept id="decorator:Delegate">
        <description>Abstract concept that returns all fields labeled with "Decorator" and "Delegate".
        </description>
        <cypher><![CDATA[
            MATCH
              (delegate:Field:Decorator:Delegate)
            RETURN
              delegate AS Delegate
        ]]></cypher>
    </concept>

    <concept id="decorator:Decorator">
        <description>Abstract concept that returns all types labeled with "Decorator".
        </description>
        <cypher><![CDATA[
            MATCH
              (decorator:Type:Decorator)
            RETURN
              decorator AS Decorator
        ]]></cypher>
    </concept>

</jqassistant-rules>
