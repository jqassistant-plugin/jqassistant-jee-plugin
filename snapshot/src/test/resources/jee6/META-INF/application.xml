<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE application PUBLIC "-//Sun Microsystems, Inc.//DTD J2EE Application 1.3//EN" "http://java.sun.com/dtd/application_1_3.dtd">
<application xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/application_6.xsd"
             version="6">
    <application-name>TestApplication</application-name>
    <description xml:lang="en">Test Application Description</description>
    <display-name xml:lang="en">Test Application</display-name>
    <icon>
        <small-icon>icon-small.png</small-icon>
        <large-icon>icon-large.png</large-icon>
    </icon>
    <initialize-in-order>true</initialize-in-order>
    <module>
        <ejb>ejbModule.jar</ejb>
    </module>
    <module>
        <web>
            <web-uri>webModule.war</web-uri>
            <context-root>/test</context-root>
        </web>
    </module>
    <module>
        <connector>connectorModule.rar</connector>
    </module>
    <module>
        <java>javaModule.jar</java>
    </module>
    <security-role>
        <description xml:lang="en">Admin Role</description>
        <role-name>Admin</role-name>
    </security-role>
    <library-directory>lib</library-directory>
</application>